<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.podlibrary.SignaturePage"
    >

    <!--<Button
        android:text="@string/btnCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnCancel"
        android:layout_toRightOf="@id/saveBtn"
        android:layout_alignBottom="@id/saveBtn"
        android:onClick="onCancel"
        />-->

    <com.lalamove.drawingview.DrawingView
        android:id="@+id/drawingView"
        android:background="@color/white"
        android:layout_above="@+id/btnConfirm"
        android:layout_centerVertical="true"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.example.nance.pofsignature.MainActivity"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/clearBtn"
        android:layout_alignParentRight="true" android:text="X"
        android:textColor="#FFF" android:background="@drawable/round_button_background"
        android:gravity="center_vertical|center_horizontal"
        android:layout_margin="5dp" android:layout_height="25dp"
        android:layout_width="25dp" android:textSize="12sp" android:textStyle="bold"
        android:onClick="onClear"
        />
<!--        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnClear"
        android:layout_alignParentLeft="true"
        android:layout_alignBottom="@id/btnConfirm"
        android:layout_toLeftOf="@id/btnConfirm"
        android:layout_marginLeft="25dp"
        android:onClick="onClear"/>-->

    <FrameLayout
        android:id="@+id/progressBarHolder"
        android:animateLayoutChanges="true"
        android:visibility="gone"
        android:alpha="0.4"
        android:background="#000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:layout_gravity="center" />
    </FrameLayout>

    <Button
        android:id="@+id/btnConfirm"
        android:text="@string/btnConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:onClick="onSave"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/clearBtn"
        android:layout_alignEnd="@+id/clearBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!--  <TextView
          android:id="@+id/tvorderObject"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_above="@id/drawingView"
          >
      </TextView>-->

</RelativeLayout>
